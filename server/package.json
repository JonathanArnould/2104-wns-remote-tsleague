{
  "name": "server",
  "version": "0.1.0",
  "main": "server.ts",
  "license": "MIT",
  "scripts": {
    "start:dev": "SERVER_STAGE=dev ts-node-dev --transpile-only --respawn  ./src/index.ts",
    "start:prod": "tsc && node ./build/index.js",
    "build": "tsc",
    "debug": "tsc && node --inspect ./build/src/index.js",
    "lint": "tsc --noEmit && eslint --fix src/**/*.ts{,x}",
    "format": "prettier --write src/**/*.ts",
    "test": "jest --runInBand --coverage --watch --config=jest.config.js"
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@typegoose/typegoose": "^7.6.0",
    "apollo-server": "^3.0.2",
    "apollo-server-core": "^3.0.2",
    "bcrypt": "^5.0.1",
    "casual": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenvenc": "^3.0.1",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "5.10.18",
    "nodemailer": "^6.7.2",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.1.3",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "apollo-server-testing": "^2.24.1",
    "class-validator": "^0.13.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^27.0.5",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
